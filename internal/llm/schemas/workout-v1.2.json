{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://swolegen.app/schemas/workout-v1.2.json",
  "title": "SwoleGen Workout v1.2",
  "type": "object",
  "required": [
    "version",
    "workout_id",
    "title",
    "description",
    "date",
    "location",
    "units",
    "duration_minutes",
    "goal",
    "cut_order",
    "sets",
    "notes_to_user",
    "post_workout"
  ],
  "properties": {
    "title": {
      "type": "string",
      "maxLength": 200,
      "minLength": 1
    },
    "description": {
      "type": "string",
      "maxLength": 2000,
      "minLength": 1
    },
    "cut_order": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "enum": [
          "B",
          "C"
        ]
      }
    },
    "date": {
      "type": "string",
      "format": "date"
    },
    "duration_minutes": {
      "type": "integer",
      "maximum": 180,
      "minimum": 10
    },
    "goal": {
      "type": "string",
      "minLength": 1
    },
    "location": {
      "type": "string",
      "minLength": 1
    },
    "notes_to_user": {
      "type": [
        "string",
        "null"
      ]
    },
    "post_workout": {
      "$ref": "#/$defs/post_workout"
    },
    "sets": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/set"
      }
    },
    "units": {
      "type": "string",
      "enum": [
        "lbs",
        "kg"
      ]
    },
    "version": {
      "type": "number",
      "const": 1.2
    },
    "workout_id": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}-[a-z0-9-]+-[0-9]{2}$"
    }
  },
  "additionalProperties": false,
  "$defs": {
    "nullableInteger": {
      "type": [
        "integer",
        "null"
      ]
    },
    "nullableNumber": {
      "type": [
        "number",
        "null"
      ]
    },
    "nullableString": {
      "type": [
        "string",
        "null"
      ]
    },
    "post_workout": {
      "type": "object",
      "required": [
        "perceived_difficulty",
        "completion_time_minutes",
        "notes"
      ],
      "properties": {
        "completion_time_minutes": {
          "type": [
            "integer",
            "null"
          ],
          "maximum": 300,
          "minimum": 1
        },
        "notes": {
          "type": [
            "string",
            "null"
          ]
        },
        "perceived_difficulty": {
          "type": [
            "integer",
            "null"
          ],
          "maximum": 10,
          "minimum": 1
        }
      },
      "additionalProperties": false
    },
    "set": {
      "type": "object",
      "required": [
        "id",
        "tier",
        "must",
        "superset",
        "order",
        "exercise",
        "equipment",
        "target_reps",
        "target_weight",
        "rir",
        "rest_s",
        "actual_weight",
        "actual_reps",
        "notes"
      ],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^(W|A|B|C)-[A-Z0-9-]+-(WU[0-9]+|[0-9]+)$"
        },
        "actual_reps": {
          "type": [
            "integer",
            "null"
          ],
          "minimum": 0
        },
        "actual_weight": {
          "$ref": "#/$defs/nullableNumber"
        },
        "equipment": {
          "type": "string",
          "minLength": 1
        },
        "exercise": {
          "type": "string",
          "minLength": 1
        },
        "must": {
          "type": "boolean"
        },
        "notes": {
          "$ref": "#/$defs/nullableString"
        },
        "order": {
          "type": "integer",
          "minimum": 1
        },
        "rest_s": {
          "type": "integer",
          "maximum": 600,
          "minimum": 0
        },
        "rir": {
          "type": [
            "integer",
            "null"
          ],
          "maximum": 4,
          "minimum": 0
        },
        "superset": {
          "type": [
            "string",
            "null"
          ],
          "pattern": "^[A-Z][0-9]+$"
        },
        "target_reps": {
          "type": [
            "string",
            "integer",
            "null"
          ],
          "pattern": "^([0-9]+(-[0-9]+)?|[0-9]+/(side|arm|leg))$"
        },
        "target_weight": {
          "type": [
            "string",
            "number",
            "null"
          ]
        },
        "tier": {
          "type": "string",
          "enum": [
            "W",
            "A",
            "B",
            "C"
          ]
        }
      },
      "additionalProperties": false
    }
  }
}
