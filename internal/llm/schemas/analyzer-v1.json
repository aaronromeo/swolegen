{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://swolegen.app/schemas/analyzer-v1.json",
  "title": "SwoleGen Analyzer v1",
  "type": "object",
  "required": ["meta", "session", "fatigue_policy", "time_budget", "exercise_plan"],
  "additionalProperties": false,
  "properties": {
    "meta": {
      "type": "object",
      "required": ["date", "location", "units", "duration_minutes", "goal"],
      "additionalProperties": false,
      "properties": {
        "date": { "type": "string", "format": "date" },
        "location": { "type": "string" },
        "units": { "type": "string", "enum": ["lbs", "lb", "kg"] },
        "duration_minutes": { "type": "integer", "minimum": 10 },
        "goal": { "type": "string" }
      }
    },
    "session": {
      "type": "object",
      "required": ["type", "tiers", "cut_order"],
      "additionalProperties": false,
      "properties": {
        "type": { "type": "string" }, 
        "tiers": { "type": "array", "items": { "type": "string", "enum": ["W","A","B","C"] } },
        "cut_order": { "type": "array", "items": { "type": "string", "enum": ["A","B","C","W"] } }
      }
    },
    "fatigue_policy": {
      "type": "object",
      "required": ["rir_shift", "load_cap_pct", "reason"],
      "additionalProperties": false,
      "properties": {
        "rir_shift": { "type": "integer", "minimum": 0, "maximum": 2 },
        "load_cap_pct": { "type": "number", "minimum": 0.8, "maximum": 1.05 },
        "reason": { "type": "string" }
      }
    },
    "time_budget": {
      "type": "object",
      "required": ["set_seconds_estimate", "target_set_count"],
      "additionalProperties": false,
      "properties": {
        "set_seconds_estimate": { "type": "integer", "minimum": 20, "maximum": 300 },
        "target_set_count": { "type": "integer", "minimum": 6, "maximum": 60 }
      }
    },
    "exercise_plan": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["tier", "exercise", "equipment", "superset", "warmups", "working_sets", "targets"],
        "additionalProperties": false,
        "properties": {
          "tier": { "type": "string", "enum": ["W","A","B","C"] },
          "exercise": { "type": "string" },
          "equipment": { "type": "string" },
          "superset": { "type": ["string","null"] },
          "warmups": { "type": "integer", "minimum": 0, "maximum": 5 },
          "working_sets": { "type": "integer", "minimum": 1, "maximum": 6 },
          "targets": {
            "type": "object",
            "required": ["rep_range", "rir", "target_load", "load_cap"],
            "additionalProperties": false,
            "properties": {
              "rep_range": { "type": "string" },
              "rir": { "type": "integer", "minimum": 0, "maximum": 4 },
              "target_load": { "type": ["number","null"] },
              "load_cap": { "type": ["number","null"] }
            }
          }
        }
      }
    }
  }
}

